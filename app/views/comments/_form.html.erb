<form>
  <div class = "form-group">
    <%= form_for ([@post, @post.comments.build]) do |f| %>
        <p>
          <%= f.label :commenter %> <br>
          <%= f.text_field :commenter %> <br>
        </p>
  </div>
  <div class = "form-group">
        <p>
          <%= f.label :body %> <br>
          <%= f.text_area :body %> <br>
        </p>
  </div>
        <button>
          <%= f.submit %>
        </button>
      <% end %>
</form>