<div class = "container">
  <p>
    <em>Title:</em>
    <%= @post.title %>
  </p>

  <p>
    <em>Price:</em>
    <%= @post.price %>
  </p>

  <p>
    <em>Description:</em>
    <%= @post.description %>
  </p>

  <% @post.comments.each do |c| %>
    <p>
      <em>Commenter:</em> <%= c.commenter %>
      <em>Comment: </em> <%= c.body %>
    </p>
  <% end %>



  <h2>Add a comment </h2>
  <%= form_for ([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %> <br>
      <%= f.text_field :commenter %> <br>
    </p>

    <p>
      <%= f.label :body %> <br>
      <%= f.text_area :body %> <br>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>


  <%= link_to "Back", posts_path %>
  <%= link_to "Edit", edit_post_path %>
</div>