<div class = "container">
  <p>
    <em>Title:</em>
    <%= @post.title %>
  </p>

  <p>
    <em>Price:</em>
    <%= @post.price %>
  </p>

  <p>
    <em>Description:</em>
    <%= @post.description %>
  </p>

  <img class = "profile" src = <%=@post.image_url.to_s%>>

  <%= render @post.comments %>

  <h2>Add a comment </h2>
  
  <%= render 'comments/form' %>

  <%= link_to "Back", posts_path %>
  <%= link_to "Edit", edit_post_path %>
</div>